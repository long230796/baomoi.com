						.tin-the-gioi(id=title.theloai+"-"+title.id, data-id=title.id)
							.image(id=title.theloai+"Image-"+title.id)
								video.embed-responsive(style="width: 200px; border-radius: 10px; height: 110px", controls='')
									source(src=title.video, type='video/mp4' )
