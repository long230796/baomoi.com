									h3.m-0= title.title
								.link
									a(href=title.content)= title.source
									a(href='#')= title.thoigian
									a(href='#')= title.ngaythang
									a(href='/'+title.theloai)= title.theloai
								.hashtag
									i.fas.fa-tags
									a(href='#' style="color:#212529; font-size: 1.2rem;").ml-3= title.hashtag
					else			
						if (!title.video)	
							hr
							.tin-the-gioi(id=title.theloai+"-"+title.id, data-id=title.id)
								.image(id=title.theloai+"Image-"+title.id)
									a(href=title.theloai+'/news/'+title.id, style="text-decoration: none", title=title.title)
										img(src=title.image)
								.content
									a(href=title.theloai+'/news/'+title.id, style="text-decoration: none", title=title.title)
										h3.m-0= title.title
									.link
										a(href=title.content)= title.source
										a(href='#')= title.thoigian
										a(href='#')= title.ngaythang
										a(href='/'+title.theloai)= title.theloai
									.hashtag
										i.fas.fa-tags
										a(href='#' style="color:#212529; font-size: 1.2rem;").ml-3= title.hashtag
			
			if (errors == true)	
				.alert.alert-warning.alert-dismissible.mt-3(role='alert') 
					|Không tìm thấy kết quả phù hợp!
